{
  "name": "blog-backend",
  "version": "1.0.0",
  "description": "API de um blog",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "test": "ts-node jest.startup.ts",
    "ts-coverage": "typescript-coverage-report"
  },
  "jest": {
    "globals": {
      "address": "http://localhost:3001"
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mspolycarpo/blog-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mspolycarpo/blog-backend/issues"
  },
  "homepage": "https://github.com/mspolycarpo/blog-backend#readme",
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.13.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5",
    "typescript-coverage-report": "^0.6.0"
  }
}
